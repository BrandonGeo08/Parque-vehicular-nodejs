<div class="main-panel p-5">
	<div class="content">
    <div class="container p-4">
      <div class="row">
        <div class="col-md-4 mx-auto">
          <div class="card text-center">
            <div class="card-header">
              <h3>Registrar usuario</h3>
            </div>
            <div class="card-body">
              <img src="/img/logo_borde.png" alt="" class="card-img-top mx-auto m-2 rounded-circle w-50">
              <form action="/signup" method="POST">
                <div class="form-group">
                  <input type="number" name="clvEmployee" placeholder="Clave de empleado" class="form-control" autofocus>
                </div>
                <div class="form-group">
                  <input type="type" name="fullname" placeholder="Full Name" class="form-control">
                </div>
                <div class="form-group">
                  <select type="text" name="username" placeholder="Tipo de usuario" class="form-control">
                    <option value="">Tipo de usuario</option>
                    <option value="Admin">Admin</option>
                    <option value="Usuario">Usuario</option>
                  </select>
                </div>
                <div class="form-group">
                  <input type="password" name="password" placeholder="Password" class="form-control">
                </div>
                <div class="form-group">
                  <button class="btn btn-success btn-block">
                    Registrar
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
   </div>
</div>