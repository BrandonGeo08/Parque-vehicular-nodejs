<div class="main-panel p-5">
    <div class="content">
        <div class="container p-4">
            <div class="row">
                {{#if user}}
                <div class="col-md-4 mx-auto">
                    <div class="card text-center">
                        <div class="card-header">
                            <h3>Registrar usuario</h3>
                        </div>
                        <div class="card-body">
                            <img src="/img/logo_borde.png" alt="" class="card-img-top mx-auto m-2 rounded-circle w-50">
                            <form  action="/data/editUser/{{data.id}}" method="POST">
                                <div class="form-group">
                                    <input type="number" value="{{data.clvEmployee}}" name="clvEmployee" placeholder="Clave de empleado"
                                        class="form-control" required autofocus>
                                </div>
                                <div class="form-group">
                                    <input type="text" value="{{data.sucursal}}" name="sucursal" placeholder="Sucursal"
                                        class="form-control" required autofocus>
                                </div>
                                <div class="form-group">
                                    <input type="text" value="{{data.fullname}}" name="fullname" placeholder="Nombre Completo"
                                        class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" value="{{data.username}}" name="username" placeholder="Nombre Completo"
                                        class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" placeholder="ContrsaeÃ±a" class="form-control"
                                        required>
                                </div>
                                <div class="form-group">
                                    <a href="/data/usuarios" class="btn btn-danger btn-block">Cancelar</a>
                                    <button class="btn btn-success btn-block">
                                        Editar
                                    </button>
                                    <br>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>